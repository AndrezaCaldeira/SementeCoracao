---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Natalie Revorêdo | Arte, Dança e Iluminação Cênica">
  <div class="mx-auto max-w-5xl px-4 min-h-screen flex flex-col items-start pt-40">
     <h2 class="font-ralewayBold text-secondary text-2xl md:text-4xl mb-8 text-center">
      Eventos
    </h2>

    <div class="flex items-center mb-8 ml-4 md:ml-0"> <!-- Flex container para alinhar imagem e texto lado a lado -->
      <div class="mr-4">
        <img src="/Corpo Luz Semente criação.jpeg" alt="Imagem Corpo Luz semente criação" class="h-64 md:h-96 w-auto"> <!-- Ajuste de altura para h-64 e h-96 em dispositivos médios -->
      </div>

      <div class="text-left">
        <h2 class="font-ralewayBold text-white text-2xl md:text-4xl mb-4">
          Corpo Luz
        </h2>
        <p class="font-ralewayRegular text-white text-xs md:text-sm mb-4">
          Semente de criação
        </p>
        <p class="font-ralewayRegular text-white text-base mb-4">
          Corpo-mulher-território: iluminação, dança e escrita <br> como caminhos para criação
        </p>
         <a href="#" class="font-bold inline-block px-6 py-3 text-white bg-[#984322] rounded hover:bg-opacity-80 transition-colors duration-300">
      Inscreva-se
    </a>
      </div>
    </div>
  </div>
</Layout>

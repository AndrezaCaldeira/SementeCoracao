---
import "@/styles/globals.css";
import Header from "../components/header";
import Footer from "../components/footer";

interface Props {
  title: string;
}

const { title } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
---

<!doctype html>
<html lang="pt-BR" id="top">
  <head>
    <meta charset="UTF-8" />
    <meta name="author" content="Natalie Revorêdo" />
    <meta
      name="description"
      content="Portfólio oficial da artista recifense Natalie Revorêdo. Explore suas obras, performances, oficinas e eventos, e conheça sua abordagem integrativa e criativa."
    />
    <meta
      name="keywords"
      content="Natalie Revorêdo, Semente Coração, CorpoLuz, arte recifense, dança, performance, iluminação cênica, oficinas de arte, círculos de mulheres, arte integrativa, portfólio de artista"
    />
    <meta name="robots" content="index,follow" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="antialiased">
    <header class="bg-background fixed z-50 py-2 w-full">
      <Header currentPath={pathname} client:load />
    </header>

    <main class="bg-[url('/background.png')]">
      <slot />
    </main>

    <footer class="bg-black">
      <Footer />
    </footer>
  </body>
</html>
